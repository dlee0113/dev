<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN" "http://castor.exolab.org/mapping.dtd">

<mapping>
	<class name="com.mkyong.core.model.Customer">
		<map-to xml="customer" ns-uri="http://uri.com" />

		<field name="age" type="integer">
			<bind-xml name="age" node="attribute" />
		</field>
		<field name="flag" type="boolean">
			<bind-xml name="flag" node="element" />
		</field>
		<field name="name" type="string">
			<bind-xml name="name" node="element" />
		</field>
		<field name="address" type="com.mkyong.core.model.Address" />
		
		<!-- 
		<field name="address" type="com.mkyong.core.model.Address">
			<bind-xml name="street" node="element"/>
		</field>
		 -->
	</class>
	
	<class name="com.mkyong.core.model.Address">
		<map-to xml="address" ns-uri="http://uri.com" />
	
		<field name="street" type="string">
			<bind-xml name="street" node="element" xmlns="http://uri.com" />
		</field>
		<field name="city" type="string">
			<bind-xml name="city" node="element"/>
		</field>
		<field name="zipcode" type="string">
			<bind-xml name="zipcode" node="element"/>
		</field>	
	</class>

</mapping>
